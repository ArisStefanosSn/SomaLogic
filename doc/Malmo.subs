#!/bin/bash

export SomaLogic=/scratch/jhz22/SomaLogic
export bs=45

awk 'NR==(b-1)*bs+1, NR==b*bs {
    cmd="gunzip -c box/Malmo/zln${1}_summary.csv.gz | \
         awk -vFS=\",\" -vOFS=\"\\t\" -f doc/Malmo.awk | \
         sort -k2,2n -k3,3n | \
         gzip -f > sumstats/Malmo/Malmo.${2}.txt.gz"
    system(cmd)
}' b=S1 bs=$bs box=$SomaLogic/box sumstats=$SomaLogic/sumstats $SomaLogic/sumstats/Malmo.list
