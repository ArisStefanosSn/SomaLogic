#!/bin/bash --login
# 19-12-2018 JHZ

#SBATCH -J METAL
#SBATCH -o METAL.log
#SNATCH -a 1-390
#SBATCH -p long
#SBATCH -t 1-30:0
#SBATCH --export ALL
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --cpus-per-task=1

export rt=$HOME/SomaLogic
export bs=10

cd $rt
awk 'NR==(b-1)*bs+1, NR==b*bs {
    cmd=sprintf("echo %s;export protein=%s;metal %s/METAL/%s.metal;gzip -f %s/METAL/%s-1.tbl.gz",$1,$1,rt,$1,rt,$1)
    system(cmd)
}' b=$SLURM_ARRAY_TASK_ID bs=$bs rt=$rt $rt/doc/SomaLogic.list
